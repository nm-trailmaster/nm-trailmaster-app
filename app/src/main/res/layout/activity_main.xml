<!--      app:layout_constraintBottom_toBottomOf="parent"/>-->

    <Button
      android:id="@+id/butt1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      android:layout_margin="8dp"
      android:background="@drawable/trail_solo_butt_1"
      />

    <Button
      android:id="@+id/butt2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      android:layout_margin="8dp"
      android:background="@drawable/camping_solo_button"
      />

    <Button
      android:id="@+id/butt3"
