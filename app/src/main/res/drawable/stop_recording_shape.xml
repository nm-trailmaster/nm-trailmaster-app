<?xml version="1.0" encoding="utf-8"?>

<layer-list>

  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
      android:shape="ring">
      <corners
        android:radius="60dp"/>
      <size
        android:height="60dp"
        android:width="60dp"/>
      <stroke
        android:color="@color/buttonOuter"
        android:width="2dp"/>
    </shape>
  </item>

  <item>

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
      android:shape="rectangle"
      android:tint="@color/buttonOuter">
      <corners
        android:radius="5dp"/>
      <size
        android:height="50dp"
        android:width="50dp"/>

    </shape>
  </item>

</layer-list>